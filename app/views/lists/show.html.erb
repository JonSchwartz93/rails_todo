<h1><%= @list.title %></h1>
<h3><%= @list.description %></h3>

<div id="items_wrapper">
	<%= render @list.items %>
	<div id="form">
		<%= render "items/form"%>
	</div>
</div>

<div class="links">
	<%= link_to "Edit List", edit_user_list_path(current_user, @list) %> | 
	<%= link_to "Delete List", user_list_path(current_user, @list), method: :delete, data: { confirm: "Are you sure you want to delete this list?"} %> | 
	<%= link_to "Back to Profile", current_user %>
</div>

