<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @user do |f| %>
			First Name: <%= f.text_field :first_name, class: 'form-control' %><br>
			Last Name: <%= f.text_field :last_name, class: 'form-control' %><br>
			Email: <%= f.email_field :email, class: 'form-control' %><br>
			Password: <%= f.password_field :password, class: 'form-control' %><br>
			Password Confirmation: <%= f.password_field :password_confirmation, class: 'form-control' %>
			<br>
			<br>
			<%= f.submit "Submit", class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>